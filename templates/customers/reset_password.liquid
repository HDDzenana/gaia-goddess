{%- comment -%} /templates/customers/reset_password.liquid {%- endcomment -%}

<section class="page-customer">
	<div class="wrapper">
		<div class="reset-password">
			<div class="reset-password__form" style="min-width: 500px;">

				<div class="form-vertical">
					{% form 'reset_customer_password', id: 'ResetCustomerPassword' %}
	
						<!-- <h3 class="account__heading account__heading--small">{{ 'customer.reset_password.title' | t }}</h3> -->
	
						<h2  class="account__heading inline-list center "
						style="text-align: center; font-weight: 900;
						width: 100% !important; font-size: 32px; width: 500px;
						color: white;">
						
						{{ 'customer.reset_password.subtext' | t: email: email }}
					</h2>
	
						{{ form.errors | default_errors }}
	
						<label for="ResetPassword" class="hidden-label">{{ 'customer.reset_password.password' | t }}</label>
						<input type="password" value="" name="customer[password]" id="ResetPassword" class="input--full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}" style="
						background: none;
						border-radius: 40px;
						height: 60px;
						color: white !important;">  
	
						<label for="PasswordConfirmation" class="hidden-label">{{ 'customer.reset_password.password_confirm' | t }}</label>
						<input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input--full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}"style="
						background: none;
						border-radius: 40px;
						height: 60px;
						color: white !important;"> 
	
						<div class="text-center">
							<button type="submit" class="btn" style="
							margin: auto;
							margin-top: 50px;
    font-size: 16px !important;
    padding: 10px 20px !important;
					"> {{ 'customer.reset_password.submit' | t }}</button>
						</div>
	
					{% endform %}
				</div>
	
			</div>
		</div>
	</div>
</section>


<style>

	input:focus {
		background-color: white !important;
	}
</style>