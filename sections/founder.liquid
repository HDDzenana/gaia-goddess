<div class="wrapper-{{section.id}}">
  
  <div class="img">
    {%render 'gaia-image'%,
    image: section.settings.image
    %}
    
  </div>
  
  <div class="founderinfo">
    
    <h1 class="header-{{section.id}}"> {{ section.settings.header }} </h1>
  </div>
  
  
</div>



{% schema %}
{
  "name": "Founder",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "default": "transparent",
      "label": "Section Background"
    },
    {
      "type": "image_picker",
      "id": "image",
	  "label": "Image"
    },
    {
      "type": "text",
      "id": "header",
      "placeholder": "Our Founder",
      "label": "Header"
    },
    {
      "type": "text",
      "id": "name",
      "placeholder": "Maria Marshall",
      "label": "name"
    },
    {
      "type": "text",
      "id": "role",
      "placeholder": "Founder",
      "label": "Role"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }

     ],
    "presets": [
      {
        "name": "Our Founder"
      }
    ]
  }
  {% endschema %}