{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}
 
 
{%- assign article = block.settings.article -%}

<style>
    .leftlink {
      cursor: pointer;
    }
    .cards-{{section.id}} {
        padding-top: {{section.settings.padding_top}}px;
        padding-bottom: {{section.settings.padding_bottom}}px;
    }
    .img-{{section.id}}, .img-{{section.id}} img {
        min-width: 100% !important;
        object-fit: cover;
    }
    .icn {
        margin-left: -10px;
    }

    .articlecontents-{{section.id}} {
        box-shadow: -6px 7px 20px 0px #d9d2d5eb;
        min-width: 90%;
        float: left;
        padding: 40px;
        padding-left: 40px;
        margin-top: -20px;
        /* border-radius: 5px; */
    }

		{% if section.settings.numberofcolumns == '360' %}
    .cards-{{section.id}}  .multicolumncard__image {
        width: 360px !important;
        height: 360px;
    }
    .cards-{{section.id}} p
    {
        width: 320px !important;

    }
		{% endif %}

		{% if section.settings.numberofcolumns == '260' %}
    .cards-{{section.id}}    .multicolumncard__image {
        width: 260px;
        height: 260px;
    }   .cards-{{section.id}} p
        {
            /* width: 260px !important; */

        }


		{% endif %}
    .cards-{{section.id}} p {
        margin: 0;
        min-width: 100%;
    }

    .center {
        text-align: center;
        color: {{section.settings.heading_color}};
    }
    .multicolumncard__image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .cards-wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;

    }

    .card-link {
        text-decoration: none;
        color:#EB6FBD !important;
        text-align: center !important;
        word-break: keep-all;
        width: 100% !important;
        text-align: left;
    }

    .texttopcont {
        text-align: left;
        margin-left: 2%;
    }
    .card  * {
        display: flex;
        flex-direction: column;
        width: 260px;
        margin: auto;
        border-radius: 3px;
        word-break: break-word;
        margin-top: {{section.settings.spacing_cards}}px;
    }
    .additional-wrapper {
        width: 100%;
    }
    .lefti {
        text-align:left;
        margin-top: 0;
        width: 100%;
    }

    .icn
    {
        margin-left: -10px !important;}
    @media only screen and (max-width: 998px) {
        .newestcards-{{section.id}} {
            padding-top: 10px;
        }
        #jtd {
          left: 5% !important;
        }
        .template-blog h2 {
          text-align: center;
        }
        .articlecontents-{{section.id}} * {
            max-width:200px;
        }
        .blogsall {
            display: flex !important;
            flex-direction: column !important;
        }

        .articlecontents-{{section.id}} {
            text-align: left !important;
        }
        .card  {
            height: 200px !important;
        }
        .healers-filter__dropdown {
            display: none !important;
        }
        .card   * {
            /* width: 160px !important; */
            font-size: small;
            text-align: left !important;
        }
        .multicolumncard__image {
            width: 100%;
            height: 160px !important;
            object-fit: cover;
        }

        .additional-wrapper {
            margin-bottom: 40px !important;}
    }

    .articlecontents-{{section.id}} {
        background: white;
        margin-top:-100px;
        min-height: 205px;}


    .leftlink,
    .time, .time * {    display: flex;
        text-align: left;
        text-align-last: left;
        width: 100% !important;
        align-items: center;
        margin: 0;
        padding:0;
        flex-direction: row;
    }

    .leftlink, a.leftlink {
        text-align: left;
        color:#6c1d45;
        margin-top: 20px;
        font-weight: 600;

    }
    .title * {
        color: #EB6FBD;
    }
    .healers-filter__dropdown {
        border: 1px solid #6C1D45;
        border-radius: 60px;
        padding: 10px 20px;
        font-weight: bold;
        color: #6C1D45;
    }

    .collapsible-content__header {
        display: flex;
        margin: auto !important;
        justify-content: space-around;
    }

    .time img,   .time .gaia-image {
        height: 50px;
        width: 50px !important;
        object-fit: contain;
        margin: 0;
        padding: 0;
    }
</style>
 
<div class="newestcards-{{section.id}} " style="background-color: {{section.settings.section_bg}};">
  <div class="cards-{{section.id}} page-width">
    <div class="collapsible-content__header  " style="text-align: center; margin: auto !important;">
{%- if section.settings.caption != blank -%}
      <p class="caption-with-letter-spacing" 
          style="text-align: center; 
          margin: auto !important; 
          color: {{section.settings.heading_color}}"> 
          {{ section.settings.caption | escape }}
        </p>
{% endif %}

{% if section.settings.heading %}  
    <div class="topcont" 
          style="display:flex;flex-wrap: wrap;
          max-width: 1400px;
          width: 94%;
          justify-content: space-between;
          align-items: center;">
      <div class="texttopcont" >
        <h2  class=" ff-uf green u-case mb-10" style="padding: 0; margin: 0;" >
            {{ section.settings.heading |escape }}
        </h2>
        <p class=" ff-uf green u-case mb-10 grayregular" style="max-width: 600px; text-align: left; padding:0">
          {{section.settings.description}}
        </p>
    </div>
    <div class="filters">
      <div class="healers-filter-{{section.id}}">
        <select class="healers-filter__dropdown" id="category" name="category">
          <option disabled selected>Members Only</option>
          <option value="yoga">Members Only</option>
          <option value="meditation">Public</option>
        </select>
      
        <select class="healers-filter__dropdown" id="BlogTagFilter">
          <option id="go_all" value="{{ shop.url }}{{ blog.url }}" selected>All Filters  </option>
            {%- for tag in blog.all_tags -%}
            {% if current_tags contains tag %}
            <option value="{{ shop.url }}{{ blog.url }}/tagged/{{ tag | handle }}" selected>{{ tag }}</option>
            {% else %}
            <option value="{{ shop.url }}{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</option>
            {% endif %}
            {%- endfor -%}
            </select>
              <script>
              $(function(){
              $('#BlogTagFilter').on('change', function () {
              var url = $(this).val(); // get selected value
              if (url) { // require a URL
                window.location = url; // redirect
              }
              return false;
              });
              });
              </script>
      </div>
    </div>
</div>
</div>
{% endif %}


