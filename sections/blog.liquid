<div id="jtd" class="smt" style="  display: none;position:absolute  !important; top: 10% !important; left: 35%; right:auto; height: 100vh"> 
  {% render 'blog-bm-popup' %} </div>
 
<script>
  function myFunction() {
    var x = document.getElementById("jtd");  
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }
  </script>
  
  <script>
  var button = document.getElementById('closebtng');
  
  button.onclick = function() {
    var div = document.getElementById('jtd');
    if (div.style.display !== 'none') {
        div.style.display = 'none';
    }
    else {
        div.style.display = 'block';
    }
  };  var button = document.getElementById('closebtnv');
  
  button.onclick = function() {
    var div = document.getElementById('jtd');
    if (div.style.display !== 'none') {
        div.style.display = 'none';
    }
    else {
        div.style.display = 'block';
    }
  };  var button = document.getElementById('closebtnp');
  
  button.onclick = function() {
    var div = document.getElementById('jtd');
    if (div.style.display !== 'none') {
        div.style.display = 'none';
    }
    else {
        div.style.display = 'block';
    }
  };
  </script>
 
{% schema %}

{
  "name": "Cards",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "heading_color",
      "label": "Text Color",
      "default": "#FAFAFA"
    }, {
      "type": "color",
      "id": "heading_colors",
      "label": "Block Text Color",
      "default": "#FAFAFA"
    }, {
      "type": "color",
      "id": "section_bg",
      "label": "Section Bg",
      "default": "#000000"
    }, {
      "type": "color",
      "id": "card_bg",
      "label": "Card Background",
      "default": "#FAFAFA"
    }, {
      "type": "text",
      "id": "caption",
      "label": "t:sections.collapsible_content.settings.caption.label"
    }, {
      "type": "text",
      "id": "heading",
      "label": "t:sections.collapsible_content.settings.heading.label",
      "default": "Collapsible content"
    }, {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }, {
      "type": "header",
      "content": "Section Layout"
    }, {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.rich-text.settings.color_scheme.options__1.label"
        }, {
          "value": "accent-2",
          "label": "t:sections.rich-text.settings.color_scheme.options__2.label"
        }, {
          "value": "background-1",
          "label": "t:sections.rich-text.settings.color_scheme.options__3.label"
        }, {
          "value": "background-2",
          "label": "t:sections.rich-text.settings.color_scheme.options__4.label"
        }, {
          "value": "inverse",
          "label": "t:sections.rich-text.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.rich-text.settings.color_scheme.label"
    }, {
      "type": "select",
      "id": "link_style",
      "options": [
        {
          "value": "h2",
          "label": "Heading "
        }, {
          "value": "p",
          "label": "Paragraph"
        }
      ],
      "default": "h2",
      "label": "Card Title - Font Size"
    }, {
      "type": "select",
      "id": "numberofcolumns",
      "label": "Number Of Columns",
      "options": [
        {
          "value": "260",
          "label": "4-Column"
        }, {
          "value": "360",
          "label": "3-Column"
        }
      ],
      "default": "260",
      "label": "Number of columns in one row"
    }, {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 0
    }, {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 0
    }, {
      "type": "range",
      "id": "spacing_cards",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Vertical Cards Spacing",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "Card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }, {
          "type": "url",
          "id": "link",
          "label": "Link"
        }, {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Card Title"
        }, {
          "type": "image_picker",
          "id": "iconimg",
          "label": "Icon"
        }, {
          "type": "liquid",
          "id": "description",
          "label": "Description"
        }, {
          "type": "article",
          "id": "article",
          "label": "Article"
        }, {
          "type": "text",
          "id": "linktext",
          "label": "Link Text",
          "default": "Read More"
        }, {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cards"
    }
  ]
