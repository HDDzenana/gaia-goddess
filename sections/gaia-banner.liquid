
<style>
  .supperco-banner-{{section.id}}{
    padding-top: {{section.settings.padding_top | times: 0.75 | round: 0}}px;
    padding-bottom: {{section.settings.padding_bottom | times: 0.75 | round: 0}}px;
  }

  @media only screen and (min-width: 750px) {
    .supperco-banner-{{section.id}}
  {
    padding-top: {{section.settings.padding_top}}px;
    padding-bottom: {{section.settings.padding_bottom}}px;
  }
 .psi {
    max-width: 70% !important;
    margin: auto;  
  }
}
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" integrity="sha512-1cK78a1o+ht2JcaW6g8OXYwqpev9+6GqOkz9xmBN9iUUhIndKtxwILGWYOSibOKjLsEdjyjZvYDq/cZwNeak0w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js" integrity="sha512-A7AYk1fGKX6S2SsHywmPkrnzTZHrgiVT7GcQkLGDe2ev0aWb8zejytzS8wjo7PGEXKqJOrjQ4oORtnimIRZBtw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<section class="supperco-banner-{{section.id}} " style=" background: {{section.settings.bg}}; height:100%;">
  <div class="wrapper">  
  <div class="description_div ">
    <h1 class="center " style="color: {{section.settings.heading_color}};padding-top: 20px; padding-bottom: 0px; margin-bottom: 0px !important">
      {{section.settings.heading }}
    </h1>
    <div class="psi grayregular" style="text-align: center; margin-top: 0;">
      {{section.settings.text_content  }}
    </div>
  </div>
  <div class="gaia
 gaia"  style="margin: 0; padding: 0;">
    {% for block in section.blocks %}
 
      <div class="gaiabimg animate__animated animate__fadeInUp{%if block.settings.dm == false %} visuallyhiddenm {% endif %} wrapper">
        {% render 'gaia-image'
          image: block.settings.image,
          mobile_image: block.settings.mobile_image
          %} 

      </div>

        {% if block.settings.fw and section.blocks.size < 2 %} 
 <style>.gaiabimg  .wrapper,
   .gaiabimg:last-of-type {
     min-width: 100%;
     object-fit: cover;
   } 
 </style>
        {%endif%}
    {% endfor %}
  </div></div>
</section>


<style>
 
  .gaia {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    height: 40vh;
    flex-wrap: wrap;
    overflow: hidden;
  }
  .gaiabimg {
    width: 64%;
    height: 100%;
    padding: 0;
  }

  .gaiabimg:last-of-type {
    width: 35.5%;
    height: 40vh;
    padding: 0;
  }
  .gaia-image,
  .gaiabimg .gaia-image img {
    height: 100%;
    width: 100%;
    margin-top: 10px;
  }
 
  @media only screen and (max-width: 790px ) {
  .visuallyhiddenm {
    display: none;
  }
 
  
  .gaia,
  .gaiabimg {
    width: 100% !important;
    margin-top: 10px;
    height: 280px;
  }
  .supperco-banner-{{section.id}}{
/*     padding-bottom: calc({{section.settings.padding_bottom}}px - 15%) !important; */
  }

  }
</style>

{% schema %}

{
  "name": "Gaia Banner",
  "class": "transparent-header",
  "max_blocks": 2,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    }, {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    }, {
      "type": "header",
      "content": "Content Settings"
    }, {
      "type": "color",
      "id": "bg",
      "default": "#FEF1F5",
      "label": "Section Background"
    }, {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }, {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#6c1d45"
    }, {
      "type": "textarea",
      "id": "text_content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "checkbox",
          "id": "fw",
          "label": "Full Width Image",
          "default": true
        }, {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        }, {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        }, {
          "type": "checkbox",
          "id": "dm",
          "label": "Display On Mobile",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gaia Custom Banner"
    }
  ]
}

{% endschema %}

