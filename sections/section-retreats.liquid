{%- comment -%} Product Feature {%- endcomment -%}

{%- liquid
    comment
      Layout
    endcomment
    assign section_id = section.id
    assign text_position = section.settings.text_position
    assign text_alignment = section.settings.text_alignment
  
    comment
      Text
    endcomment
    assign heading = section.settings.heading
    assign subheading = section.settings.subheading
    assign description = section.settings.description
    assign line_color = section.settings.line_color
  
    comment
      Button
    endcomment
    assign button_text = section.settings.button_text
    assign button_link = section.settings.button_link | default: '#'
    assign button_style = section.settings.button_style
  
    comment
      Images
    endcomment
    assign image_1 = section.settings.image_1
    assign image_link_1 = section.settings.image_link_1
  
    comment
      Colors
    endcomment
    assign bg_color = section.settings.bg_color
  -%}
  
  {%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
    {%- style -%}
      #ProductFeature--{{ section.id }} {
        background-color: {{ bg_color }};
      }
    {%- endstyle -%}
  {%- endif -%}

  <style>
    .retreat-feature{
        padding: 0;
    }
    .retreat-wrapper{
        padding: 0;
    }
    .retreat-feature__text > p {
        line-height: 1.2;
    }
    .retreat-wrapper{
      width: 100%;
    }
    @media only screen and (min-width: 768px){
        .retreat-feature__text {
            width: 50%;
            padding: var(--gutter) !important;
        }
    }
    @media only screen and (max-width: 768px){
        .retreat-feature__text{
            text-align: center;
            padding: 40px;
        }
        .btn{
            width: 50%;
        }
        .rte h3{
            margin: 0;
            font-weight: bold;
        }
        .subheading-p {
            font-size: 16px;
        }
        .btn--product-feature{
            margin-top: 15px;
        }
        .product-feature__image-bg{
            padding-top: 60%;
            background-position: 50% -100px;
        }
        .product-feature__block{
          flex-direction: column-reverse;
          display: flex;
        }
    }
    a.btn--product-feature:before {
        background: {{ section.settings.button_hover_color }} !important;
    }
    </style>
  
  <section id="ProductFeature--{{ section.id }}" class="retreat-feature" data-section-id="{{ section.id }}" data-section-type="product-feature">
    <div class="wrapper retreat-wrapper">
      
      <div class="product-feature__block{% if text_position == 'left' %} product-feature__block--reverse{% endif %}">
        <div class="product-feature__images product-feature__images--single">
      
          <div class="product-feature__image product-feature__image--primary">
            {%- if image_link_1 != blank -%}<a href="{{ image_link_1 }}">{%- endif -%}
            {%- if image_1 != blank -%}
              {%- assign image = image_1 -%}
              <div class="product-feature__image-bg lazyload"
                data-bgset="{% render 'bgset', image: image %}"
                data-sizes="auto"
                data-parent-fit="cover">
              </div>
              <noscript>
                <div class="product-feature__image-bg" style="background-image: url({{ image | img_url: '1024x' }});"></div>
              </noscript>
            {%- else -%}
              <div class="product-feature__image-bg placeholder-svg--overlayed">
                {{- 'image' | placeholder_svg_tag: 'placeholder-svg-filled' -}}
              </div>
            {%- endif -%}
            {%- if image_link_1 != blank -%}</a>{%- endif -%}
          </div>
        </div>
      
        <div class="product-feature__text retreat-feature__text product-feature__text--{{ text_alignment }} rte">
          {%- if heading != blank -%}
            <h3 style="color: {{ section.settings.header_color }}; font-weight: bold;">{{ heading  }}</h3>
          {%- endif -%}

          {%- if subheading != blank -%}
            <p class="subheading-p" style="color: {{ section.settings.subheader_color }}">{{ subheading | escape }}</p>
          {%- endif -%}
      
          {%- if settings.show_spacer_lines -%}
            <hr>
          {%- endif -%}
      
          {%- if description != blank -%}
            {{- description -}}
          {%- endif -%}
      
          {%- if button_text != blank -%}
            <a href="{{ button_link }}" class="btn btn--product-feature" style="background-color: {{section.settings.button_color}} !important; border: 1px solid {{section.settings.button_color}} !important;">{{ button_text }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </section>
   
  {% schema %}
  {
    "name": "Retreat feature",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Text position",
        "default": "right",
        "options": [
          { "label": "Left", "value": "left" },
          { "label": "Right", "value": "right" }
        ]
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "center",
        "options": [
          { "label": "Center", "value": "center" },
          { "label": "Left", "value": "left" }
        ]
      },
      {
        "type": "header",
        "content": "Images"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "image_link_1",
        "label": "Image link"
      },
      {
        "type": "header",
        "content": "Text"
      },  
      {
        "type": "color",
        "id": "header_color",
        "label": "Header Color",
        "default": "#6C1D45"
      },
      {
        "type": "color",
        "id": "subheader_color",
        "label": "Sub Header Color",
        "default": "#EB6FBD"
      },
      {
        "type": "textarea",
        "id": "heading",
        "label": "Heading",
        "default": "This is a heading for a Retreat feature block."
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading",
        "default": "This is a sub heading for a Retreat feature block."
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>Use this text to share information about the point put forth above. Describe a product, your brand, or what makes you special.</p>"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button Color",
        "default": "#800000"
      },  {
        "type": "color",
        "id": "button_hover_color",
        "label": "Button Hover Color",
        "default": "#FAFAFA"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background"
      }
    ],
    "presets": [
      {
        "name": "Retreat feature",
        "category": "Image"
      }
    ]
  }
  {% endschema %}