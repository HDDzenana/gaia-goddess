{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

{%- assign article = block.settings.article -%}

<style>

  .cards-{{section.id}} {
    padding-top: {{section.settings.padding_top}}px;
    padding-bottom: {{section.settings.padding_bottom}}px;
  }
 .img-{{section.id}}, .img-{{section.id}} img {
    min-width: 100% !important;
    object-fit: cover;
  }

  .articlecontents-{{section.id}} {
    box-shadow: -10px 16px 20px 14px #dea6b4;
    min-width: 80%;
    float: left;
    padding: 40px;
    padding-left: 10px;
    margin-top: -20px;
}
  }
  {% if section.settings.numberofcolumns == '360' %}
    .cards-{{section.id}}  .multicolumncard__image {
    width: 360px !important;
    height: 360px;
  }
   .cards-{{section.id}} p 
   {
    width: 320px !important;
 
  }
  {% endif %}

    {% if section.settings.numberofcolumns == '260' %}
  .cards-{{section.id}}    .multicolumncard__image {
    width: 260px;
    height: 260px;
  }   .cards-{{section.id}} p 
   {
    width: 260px !important;
 
  }

  
  {% endif %}
    .cards-{{section.id}} p {
      margin: 0;
    }

  .center {
    text-align: center; 
    color: {{section.settings.heading_color}};
  }
  .multicolumncard__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .cards-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
 
  }
 
  .card-link {
    text-decoration: none;
   color: {{section.settings.heading_color}};
    text-align: center !important;
    word-break: keep-all;
    width: 100% !important;
  }
    {% for block in section.blocks %}
    .card-{{block.id}} * {
      display: flex;
      flex-direction: column;
      width: 260px; 
      margin: auto;
    
      word-break: break-all;
      margin-top: {{section.settings.spacing_cards}}px;
   }
   .additional-wrapper {
     width: 45%;
   }
    .lefti {
      text-align:left;
      margin-top: 0;
      width: 100%;
    }
  @media only screen and (max-width: 768px) {
     
      .card-{{block.id}}  * {
      /* width: 160px !important; */
      text-align: center;
    }
    .multicolumncard__image {
    width: 100%;
    height: 160px !important;
    object-fit: cover;
  }
    
    .additional-wrapper {
    margin-bottom: 40px !important;}
  }
       {% endfor %}
  </style>
<div class="newestcards-{{Section.id}}" style="background-color: {{section.settings.section_bg}};"> 
<div class="cards-{{section.id}} page-width">
    <div class="collapsible-content__header" style="text-align: center; margin: auto !important;">
          {%- if section.settings.caption != blank -%}
            <p class="caption-with-letter-spacing" style="text-align: center; margin: auto !important; color: {{section.settings.heading_color}}"> {{ section.settings.caption | escape }}</p>
          {% endif %}
      
        </div>
  {% if section.settings.heading %}  
 <h1 class="center ff-uf green u-case mb-10" style="width: 100%;"> {{ section.settings.heading }} </h1>
 
  {% endif %}

    {% if section.settings.description %}
        	<div class="fs-18 txt-color text-center ff-uf">{{section.settings.description}}</div>
        {% endif %} 
  <div class="cards-wrapper">
    {% for block in section.blocks %}

   {%- assign article = block.settings.article -%}


    <div class="additional-wrapper" style="
 
    background: {{section.settings.card_bg}};
    padding: 15px;
    margin: 0;
">
      <div class="card-{{block.id}}"> 
        {% if block.settings.image != blank %} <div class="img-{{section.id}}"> 
        <img class="multicolumncard__image" srcset="{%- if block.settings.image.width >= 275 -%}{{ block.settings.image | img_url: '275x' }} 275w,{%- endif -%} {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | img_url: '550x' }} 550w,{%- endif -%} {%- if block.settings.image.width >= 710 -%}{{ block.settings.image | img_url: '710x' }} 710w,{%- endif -%} {%- if block.settings.image.width >= 1420 -%}{{ block.settings.image | img_url: '1420x' }} 1420w,{%- endif -%} {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w" src="{{ block.settings.image | img_url: '550x' }}" sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                   (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px)" alt="{{ block.settings.image.alt }}" height="{{ block.settings.image.height }}" width="{{ block.settings.image.width }}" loading="lazy">
</div> {%else %}
         <div class="img-{{section.id}}" style="background-image: url("{{ article.image.src }}"); height: 300px;" > 
         <!-- <img
                srcset="{%- if article.image.src.width >= 165 -%}{{ article.image.src | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if article.image.src.width >= 360 -%}{{ article.image.src | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if article.image.src.width >= 533 -%}{{ article.image.src | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if article.image.src.width >= 720 -%}{{ article.image.src | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if article.image.src.width >= 1000 -%}{{ article.image.src | image_url: width: 1000 }} 1000w,{%- endif -%}
                  {%- if article.image.src.width >= 1500 -%}{{ article.image.src | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ article.image.src | image_url }} {{ article.image.src.width }}w"
                src="{{ article.image.src | image_url: width: 533 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ article.image.src.alt | escape }}"
                class="motion-reduce"
                {% unless lazy_load == false %}loading="lazy"{% endunless %}
                width="260px"
                height="260px"
                
              > -->
            
            
            </div>
{% endif %}  <div class="articlecontents-{{section.id}}">  <span style="color: rgba(28, 28, 28, 0.5); font-size:12px;">{{ article.published_at | time_tag: format: 'date' }}</span> 
        {% if block.settings.title %}
        <a class="card-link"  href="{{block.settings.link}}" style="margin-top:5px;">
     <{{section.settings.link_style}} class="title" style="   color: {{section.settings.heading_color}};width: 100%;word-break: keep-all; margin: 10px 0;">
         {%if block.settings.title != blank %}   <p>  {{block.settings.title}} </p>
       {%else%}     <p>    {{article.title}}  </p>{%endif%}
          </{{section.settings.link_style}}> 
        </a>
        {% endif %}
        {% if block.settings.description %}
     <div class="lefti link_style txt-color   ff-uf" >   {{block.settings.description }}  </div> 
        {%endif%}
        
      {{article.author}}
    </div> 
          </div></div>
 

    {% endfor %}  
  </div>
</div>
</div>

{% schema %}
{ 
  "name": "Cards",
  "class": "section",
  "settings": [
 {
   "type": "color",
   "id": "heading_color",
   "label": "Text Color",
   "default": "#FAFAFA"
 },
{
  "type": "color",
  "id": "section_bg",
  "label": "Section Bg",
  "default": "#000000"
},{
  "type": "color",
  "id": "card_bg",
  "label": "Card Background",
  "default": "#FAFAFA"
},
  {
      "type": "text",
      "id": "caption",
      "label": "t:sections.collapsible_content.settings.caption.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.collapsible_content.settings.heading.label",
      "default": "Collapsible content"
    },   {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }, 
 
{
  "type": "header",
  "content": "Section Layout" 
}, {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.rich-text.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.rich-text.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.rich-text.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.rich-text.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.rich-text.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.rich-text.settings.color_scheme.label"
    }, {
      "type": "select",
      "id": "link_style",
      "options": [
        {
          "value": "h2",
          "label": "Heading "
        },
        {
          "value": "p",
          "label": "Paragraph"
        }
      ],
      "default": "h2",
      "label": "Card Title - Font Size"
    }, {
      "type": "select",
      "id": "numberofcolumns",
      "label": "Number Of Columns",
      "options": [
        {
          "value": "260",
          "label": "4-Column"
        },
        {
          "value": "360",
          "label": "3-Column"
        }
      ],
      "default": "260",
      "label": "Number of columns in one row"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 0
    }, {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 0
    },{
      "type": "range",
      "id": "spacing_cards",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Vertical Cards Spacing",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "Card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Card Title"
        },
       {
         "type": "liquid",
         "id": "description",
         "label": "Description"
       }, {
          "type": "article",
          "id": "article",
          "label": "Article"
        }
    
      ]
    }
  ],
  "presets": [
    {
      "name": "Cards"
    
    }
  ]
}

{% endschema %}