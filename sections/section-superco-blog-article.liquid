  {% schema %}

{
  "name": "Blog Article",
  "class": "transparent-header",
  "settings": [
    {
      "type": "url",
      "id": "prevlink",
      "label": "Breadcrumb"
    }, {
      "type": "text",
      "id": "prevtext",
      "label": "Breadcrumb Text",
      "default": "Discover"
    }, {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }, {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show social sharing buttons",
      "default": true
    }, {
      "type": "color",
      "id": "bg",
      "label": "Background",
      "default": "#fef1f5"
    }, {
      "type": "header",
      "content": "Layout"
    }, {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "default": "right",
      "options": [
        {
          "label": "Left",
          "value": "left"
        }, {
          "label": "Right",
          "value": "right"
        }
      ]
    }, {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        {
          "label": "Center",
          "value": "center"
        }, {
          "label": "Left",
          "value": "left"
        }
      ]
    }, {
      "type": "header",
      "content": "Text"
    }, {
      "type": "color",
      "id": "header_color",
      "label": "Header Color",
      "default": "#6C1D45"
    }, {
      "type": "header",
      "content": "Card"
    }, {
      "type": "color",
      "id": "card_title_color",
      "label": "Card Header Color",
      "default": "#6C1D45"
    }, {
      "type": "checkbox",
      "id": "card_social",
      "label": "Show social icons on card?",
      "default": true
    }, {
      "type": "textarea",
      "id": "card_text",
      "label": "Card Text",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Euismod pellentesque cursus non sed morbi."
    }, {
      "type": "header",
      "content": "Card button"
    }, {
      "type": "text",
      "id": "button_text",
      "label": "Text"
    }, {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    }, {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#6C1D45"
    }, {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#FAFAFA"
    }, {
      "type": "header",
      "content": "Colors"
    }, {
      "type": "color",
      "id": "bg_color",
      "label": "Background"
    }
  ],
  "presets": [
    {
      "name": "Blog article",
      "category": "Image"
    }
  ]
}

{% endschema %}

