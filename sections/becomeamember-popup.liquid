{% schema %}
{
  "name": "Become Member Perks",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "default": "transparent",
      "label": "Section Background"
    },
    {
      "type": "image_picker",
      "id": "image",
   	  "label": "Image"
	},
    {
      "type": "textarea",
      "id": "header",
      "default": "Limited Time Free Membership",
      "label": "Header"
    },   {
      "type": "color",
      "id": "headercolor",
      "default": "#6c1d45",
      "label": "Perk Color"
    },   {
      "type": "textarea",
      "id": "description",
      "default": "Sign up today to become a member of Gaia Goddess and get access to amazing content, join fantastic retreats and events.",
      "label": "Description"
    },{ "type": "header",
      "content": "Button"
    }, {
      "type": "text",
      "id": "button_text",
      "label": "Text"
    }, {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    }, {  
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#800000"
    }, {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#FAFAFA"
    }
  ],
  "blocks": [
    {
      "type": "Perk",
      "name": "Perk",
      "settings": [
        {
          "type": "image_picker",
          "id": "perkimage",
		   "label": "Perk Image"
        },
        {
          "type": "text",
          "id": "perktext",
          "default": "Access to Gaia's Content Library",
		  "label": "Perk Title"
        }
      ]
    } 
  ],
  "presets": [
    {
      "name": "Become Member  Perks"
    }
  ]
}

{% endschema %}