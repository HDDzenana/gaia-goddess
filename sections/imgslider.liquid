<link crossorigin="anonymous" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.0.3/swiper-bundle.css" integrity="sha512-SID9h7gl6DWMEv9gG4Msa2+Cv6Th1HK9Bswoy7ArayNta2hdRkUhhzprlgocF7X+LYH2QiroQVnYloED73SdrA==" referrerpolicy="no-referrer" rel="stylesheet"/>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>


<div class="animated-{{section.id}}">
  {% if section.settings.main_heading != blank%}
    <h2>
      {{section.settings.main_heading}}
    </h2>
  {% endif %}
  {% if section.settings.main_heading != blank%}
    {{section.settings.main_text}}
  {% endif %}
  <div class="swiper mySwiperr" style="margin-top: 50px;">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">


          <img class="sliderimg" src="{{block.settings.img | img_url: '100x'}}" alt="{{block.settings.header_image_image.alt}}"/>
          <h2 class="slider-text">
            {{block.settings.title}}</h2>
          <p class="slider-text">{{block.settings.subtitle}}</p>
        </div>


      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>


<style>
.animated-{{section.id}} {
  /* height: 500px; */
  text-align: center;
}
.swiper {
  width: 100%;
  height: 100%;
}
.swiper-slide {
  min-height: max-content;
}
.swiper-slide {
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}


.swiper-slide img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.sliderimg {
  width: 100%;
}
.slider-text {
  text-align: right;
  width: 100%;
}
.sliderimg {
  height: 350px !important;
}

.swiper-slide:nth-child(odd) {
  display: flex;
  flex-direction: column !important;
}
 
.swiper-slide:nth-child(even) {
  display: flex;
  /* flex-direction: column-reverse !important; */
} 

.swiper-button-next:after,  .swiper-button-prev:after {
  color: {{section.settings.arrow_color}};
}
@media only screen and (max-width: 768px) {
 .animated-{{section.id}} {
   max-width: 90vw;
   margin: auto;
   background: white;
 }  
}
</style>
{% schema %}

{
  "name": "Gaia Slider",
  "class": "superco-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings",
      "info": "Colors apply to all elements in this section"
    }, {
      "type": "color",
      "id": "bg",
      "default": "#FAFAFA",
      "label": "Section Background",
      "info": "Background applies to whole section"
    }, {
      "type": "color",
      "id": "arrow_color",
      "label": "Arrow Color",
      "default": "#000"
    }, {
      "type": "header",
      "content": "Content"
    }, {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "info": "Section Heading"
    }, {
      "type": "html",
      "id": "main_text",
      "label": "Content Text",
      "info": "A sentence or two to describe blocks below."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image Image"
        }, {
          "type": "text",
          "id": "title",
          "label": "Image Title"
        }, {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        }, {
          "type": "url",
          "id": "link",
          "label": "Image Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gaia Slider"
    }
  ]
}

{% endschema %}


<script>
  var swiper = new Swiper(".mySwiperr", {
    loop: true,
    slidesPerView: 3,
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true
    }
  });
</script>