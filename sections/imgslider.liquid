<link crossorigin="anonymous" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.0.3/swiper-bundle.css" integrity="sha512-SID9h7gl6DWMEv9gG4Msa2+Cv6Th1HK9Bswoy7ArayNta2hdRkUhhzprlgocF7X+LYH2QiroQVnYloED73SdrA==" referrerpolicy="no-referrer" rel="stylesheet"/>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>


<div class="  animated-{{section.id}}">
  <div class="textual">
    {% if section.settings.main_heading != blank%}
      <h2>
        {{section.settings.main_heading}}
      </h2>
    {% endif %}
    {% if section.settings.main_heading != blank%}
      {{section.settings.main_text}}
    {% endif %}
  </div>
  <div class="swiper mySwiperr" style="margin-top: 50px;">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">


          <img class="sliderimg" src="{{block.settings.img | img_url: 'master'}}" alt="{{block.settings.header_image_image.alt}}"/>

        </div>


      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>


<style>
.animated-{{section.id}} {
  /* height: 500px; */
  text-align: center;
}

.swiper-button-next {
  right: 0
}.swiper-button-prev {
  left: 0
}
.swiper {
  width: 100%;
  height: 100%;
}
.swiper-slide {
  min-height: max-content;
}
.swiper-slide {
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center; 
  -webkit-align-items: center;
  align-items: center;
}


.swiper-slide img {
  display: block;
  width: 80%;
  height: 100%;
  object-fit: cover;
}
.sliderimg {
  width: 100%;
}
 
.swiper-slide:first-child  .sliderimg img,.sliderimg:first-child {
  width: 100% !important;
}
.sliderimg {
 
}

.swiper-slide:nth-child(odd) {
  display: flex;  height: 350px;
 ;
}
 
.swiper-slide:nth-child(even) {
  display: flex;
  height: 350px;
  /* flex-direction: column-reverse !important; */
} 

.swiper-button-next:after,  .swiper-button-prev:after {
  color: {{section.settings.arrow_color}};
}
 .animated-{{section.id}}  h2 {
   color: {{section.settings.heading_color}};
 }

@media only screen and (min-width: 1000px) {
  .textual {
    width: 40%;
    padding-top: 100px;
    text-align: left;
  }.animated-{{section.id}} {
   max-width: 90% !important;
   margin: auto;
   padding-bottom: 100px;
 }
 
}
@media only screen and (max-width: 768px) {
 .animated-{{section.id}} {
   max-width: 90vw;
   margin: auto;
   background: white;
 }  
  
}
</style>
{% schema %}

{
  "name": "Gaia Slider",
  "class": "superco-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings",
      "info": "Colors apply to all elements in this section"
    }, {
      "type": "color",
      "id": "bg",
      "default": "#FAFAFA",
      "label": "Section Background",
      "info": "Background applies to whole section"
    }, {
      "type": "color",
      "id": "heading_color",
      "default": "#6C1D45",
      "label": "Heading Color "
    }, {
      "type": "color",
      "id": "arrow_color",
      "label": "Arrow Color",
      "default": "#000"
    }, {
      "type": "header",
      "content": "Content"
    }, {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "info": "Section Heading"
    }, {
      "type": "html",
      "id": "main_text",
      "label": "Content Text",
      "info": "A sentence or two to describe blocks below."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image Image"
        }, {
          "type": "url",
          "id": "link",
          "label": "Image Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gaia Slider"
    }
  ]
}

{% endschema %}


<script>
  var swiper = new Swiper(".mySwiperr", {
    direction: "horizontal",
    loop: true,
    slidesPerView: 3,
    spaceBetween: 10,
    pagination: {
      el: ".swiper-pagination",
      clickable: true
    },
    breakpoints: {
      40: {
        slidesPerView: 1,
        spaceBetween: 20
      },
      640: {
        slidesPerView: 1,
        spaceBetween: 20
      },
      768: {
        slidesPerView: 1,
        spaceBetween: 40
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 50
      }
    }
  });
</script>

<style>
  .mySwiperr .swiper-button-prev,
  .swiper-button-next {

    padding: 30px;
    background: white;
  }
</style>