{%- comment -%} Product Feature {%- endcomment -%}

{%- liquid
    comment
      Layout
    endcomment
    assign section_id = section.id
    assign text_position = section.settings.text_position
    assign text_alignment = section.settings.text_alignment
  
    comment
      Text
    endcomment
    assign line_color = section.settings.line_color
  
    comment
      Button
    endcomment
    assign button_text = section.settings.button_text
    assign button_link = section.settings.button_link | default: '#'
    assign button_style = section.settings.button_style
  
    comment
      Colors
    endcomment
    assign bg_color = section.settings.bg_color
  -%}

{%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
  {%- style -%}

#ProductFeature--{{section.id}}{
  background-color: {{bg_color}};
}

{%- endstyle -%}
{%- endif -%}

<style>
  .card-{{section.id}} {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    padding: 50px 0; 
  }

  .card-image {
    display: flex;
    flex-direction: column;
  }
    .card_icons{
        justify-content: center !important;
    }
    .border{
        border-bottom: 1px solid #EB6FBD;
        width: 90%;
        margin: 0 auto;
        margin-top: 60px;
    }
 card{
        margin: 0 auto;
        background-color: #FEF1F5;
        border-radius: 40px;
        height: auto;
        width: 420px;
        box-shadow: 0 2px 10px rgb(0 0 0 / 20%)
    }
    a.btn--about-card:before {
        background: {{ section.settings.button_hover_color }} !important;
    }
    .about-card__info{
        padding: 40px;
    }
    .about-card__title {
        margin-top: 20px;
        margin-bottom: 20px;
        color: {{ section.settings.card_title_color }}
    }
    .about-card__list{
        list-style: none;
    }  
    .about-card__list > li::before {
        content: url({{ 'bulletpoint.svg' | asset_url }});
    }
    .about-card__list > li {
        margin-bottom: 20px;
    }
    .about-card__bullet{
        color: #6C1D45;
    }
    .about-info {
        text-align: {{ section.settings.text_alignment }};
        line-height: 1.2;
    }
    .about-events{
        width: 45%;
        display: block;
        position: sticky;
        top: 3rem;
        z-index: 2;
    }
    .about-info > p{
        margin: 30px 0 !important;
    }
    @media only screen and (max-width: 768px){
        .btn--about-card{
            margin-top: 15px;
        }
        .about__block{
            flex-direction: column-reverse;
            display: flex;
          }
        .about-info {
            padding-left: var(--gutter-mobile);
            padding-right: var(--gutter-mobile);
            text-align: center;
        }
        .about-events {
            width: 100%;
        }
       
        .about-events{
            margin-top: 60px;
        }
        .border{
            margin-top: 0px;
        }
    }
    @media only screen and (min-width: 768px){
        .about__block{
            align-items: flex-start;
        }
    }
    @media only screen and (min-width: 1024px){
        .about-info{
            max-width: calc(60% - var(--gutter)*2);
            margin-left: 0;
        }
    }

    .retreat-wrapper{
        padding: 0;
    }
    .retreat-feature__text > p {
        line-height: 1.2;
    }
    .retreat-wrapper{
      width: 100%;
    }
    @media only screen and (min-width: 768px){
        .retreat-feature__text {
            width: 50%;
            padding: var(--gutter) !important;
        }
    }
    @media only screen and (max-width: 768px){
        .retreat-feature__text{
            text-align: center;
            padding: 40px;
        }
        .btn{
            width: 50%;
        }
        .rte h3{
            margin: 0;
        }
        .about-info__heading{
            font-size: 30px;
        }
    }
    .article_card_text, .article_card_title{
        text-align: center;
    }
    .article__image__wrapper{
        width: 60%;
        margin: 0 auto;
    }
    .responsive-image img{
        border-radius: 100px;
    } 

    .uploadedby {
      display: flex;
    margin: auto;
